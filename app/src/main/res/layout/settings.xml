<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/base"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingBottom="8dp"
		android:background="#000000"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/inner"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="2dp"
			android:paddingRight="2dp"
			android:paddingBottom="2dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#424242"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/settings_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="12dp"
					android:paddingBottom="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="◀"
					android:textSize="12sp"
					android:textColor="#FFFFFF" />
				<TextView
					android:id="@+id/title"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:padding="8dp"
					android:background="#212121"
					android:gravity="center_horizontal|center_vertical"
					android:text="She Need Smo.re [Settings]"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#AED581"
					android:layout_gravity="center_horizontal|center_vertical"
					android:layout_weight="5" />
				<TextView
					android:id="@+id/exit_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="12dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="❌"
					android:textSize="12sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/optionDialog"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="She Need Smo.re Settings:"
					android:textSize="16sp"
					android:textStyle="bold|italic"
					android:textColor="#F9A825" />
				<TextView
					android:id="@+id/textview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="(Please do not add a trailing &quot;/&quot;)"
					android:textSize="12sp"
					android:textStyle="italic"
					android:textColor="#FF5722" />
				<LinearLayout
					android:id="@+id/linear2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Default Domain:"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="https://"
						android:textSize="12sp"
						android:textStyle="italic"
						android:textColor="#FFFFFF" />
					<EditText
						android:id="@+id/homeURL"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="8dp"
						android:textSize="12sp"
						android:textColor="#FFFFFF"
						android:hint="www.example.com"
						android:textColorHint="#607D8B" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Link to DNS:"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
					<TextView
						android:id="@+id/textview7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="https://"
						android:textSize="12sp"
						android:textStyle="italic"
						android:textColor="#FFFFFF" />
					<EditText
						android:id="@+id/DNSURL"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="8dp"
						android:textSize="12sp"
						android:textColor="#FFFFFF"
						android:hint="www.exampledns.com"
						android:textColorHint="#607D8B" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="32dp"
					android:paddingTop="8dp"
					android:paddingRight="32dp"
					android:paddingBottom="8dp"
					android:background="#9E9E9E"
					android:text="Save"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:layout_gravity="right" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
